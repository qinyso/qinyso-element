{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "types": ["node"],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "packages/**/*.config.ts",
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/**/*.vue"
    ]
}
